#include<iostream>
using namespace std;
int main()
{
	cout<<"\n Size of Fundamental data type \n";
	cout<<"******************************************** \n";
	cout<<"The size of(char) is:         "<< sizeof(char) <<" bytes \n";
	cout<<"The size of(int) is:          "<< sizeof(int)  <<" bytes \n";
	cout<<"The size of(float) is:        "<< sizeof(float)<<" bytes \n";
	cout<<"The size of(long) is:         "<< sizeof(long) <<" bytes \n";
	cout<<"The size of(long long):       "<< sizeof(long long)<<" bytes \n";
	cout<<"The size of(long double):     "<< sizeof(long double)<<" bytes \n";
	cout<<"The size of(bool):            "<< sizeof(bool) <<" bytes \n";
	return 0;
}
